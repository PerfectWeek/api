{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "sources/main.ts",

        "sources/api/routes/**/*.ts",

        "sources/api/controllers/*.ts",

        "sources/model/entity/*.ts",
        "sources/model/migrations/*.ts",

        "sources/api/views/*.ts",

        "sources/api/middleware/*.ts",

        "sources/utils/**/*.ts",

        "sources/typings.d.ts"
    ]
}
